<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#c8b4b4b4"
                android:endColor="#c8a3a3a3"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#dc4d4d4d" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#c8c4c4c4"
                android:endColor="#c8b4b4b4"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#dc4d4d4d" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>