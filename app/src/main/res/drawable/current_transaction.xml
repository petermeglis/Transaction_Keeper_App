<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#cc0101"
                android:endColor="#960000"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#690101" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="2dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"/>
            <gradient
                android:startColor="#eaeaea"
                android:endColor="#d9d9d9"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#535353" />
        </shape>
    </item>
</selector>




