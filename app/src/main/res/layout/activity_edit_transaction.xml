<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.raide_000.transactionkeeper.EditTransaction"
    android:background="@mipmap/background">


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:text="Edit Transaction"
        android:textSize="48sp"
        android:id="@+id/title"
        android:layout_row="0"
        android:layout_column="0"
        style="@style/title" />
    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_row="1"
        android:layout_column="0"
        android:id="@+id/transactionspinner"
        android:background="@drawable/spinner_style"
        android:spinnerMode="dropdown"/>




    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Transaction Name"
        android:id="@+id/name"
        android:layout_row="2"
        android:layout_column="0"
        style="@style/mInputText" />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editnametext"
        android:layout_row="3"
        android:layout_column="0"
        android:singleLine="true"
        android:inputType="textCapSentences"/>





    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Account"
        android:id="@+id/account"
        android:layout_row="4"
        android:layout_column="0"
        style="@style/mInputText" />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:id="@+id/editaccounttext"
        android:layout_row="5"
        android:layout_column="0"
        android:singleLine="true"
        android:inputType="textCapSentences"/>


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Amount"
        android:id="@+id/amount"
        android:layout_row="6"
        android:layout_column="0"
        style="@style/mInputText" />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editamounttext"
        android:text="$"
        android:inputType="numberDecimal"
        android:layout_row="7"
        android:layout_column="0"
        android:maxLines="1" />




    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Date"
        android:id="@+id/date"
        android:layout_row="8"
        android:layout_column="0"
        style="@style/mInputText" />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editdatetext"
        android:inputType="date"
        android:layout_row="9"
        android:layout_column="0"
        android:maxLines="1" />



    <Button
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:text="Save"
        android:id="@+id/savebutton"
        android:layout_row="10"
        android:layout_column="0"
        style="@style/quick_button_text"
        android:layout_gravity="bottom" />


</GridLayout>
